@model SupplierModel
@using Nop.Web.Framework.Menu
@{
    Layout = "_AdminLayout";
    ViewBag.PageTitle = T("Admin.Plugins.Misc.SupplierList.EditSupplier").Text;
}

<form asp-controller="SupplierList" asp-action="Edit" method="post">
    <div class="content-header clearfix">
        <h1 class="float-left">
            @T("Admin.Plugins.Misc.SupplierList.EditSupplier") - @Model.Name
            <small>
                <i class="fas fa-arrow-circle-left"></i>
                <a asp-action="Configure">@T("Admin.Plugins.Misc.SupplierList.BackToList")</a>
            </small>
        </h1>
        <div class="float-right">
            <button type="submit" name="save" class="btn btn-primary" value="true">
                <i class="far fa-save"></i>
                @T("Admin.Common.Save")
            </button>
            <button type="submit" name="save" class="btn btn-primary" value="false">
                <i class="far fa-save"></i>
                @T("Admin.Common.SaveContinue")
            </button>
            <span id="supplier-delete" class="btn btn-danger">
                <i class="far fa-trash-alt"></i>
                @T("Admin.Common.Delete")
            </span>
        </div>
    </div>
    @await Html.PartialAsync("~/Plugins/Misc.SupplierList/Views/_CreateOrUpdate.cshtml", Model)
</form>
<nop-delete-confirmation asp-model-id="@Model.Id" asp-button-id="supplier-delete" asp-action="Delete" /> 